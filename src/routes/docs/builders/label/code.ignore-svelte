<script lang="ts">
  import { createLabel } from '@melt-ui/svelte';

  export let isRequired = true;
  export let inputId = 'email'

  const { root, labelValue, asterisk } = createLabel({
    isRequired,
    for: inputId,
    labelValue: 'Email',
  });
</script>

<div class="flex items-center justify-center">
  <label {...$root}>
    <span>{$labelValue}
      <span {...$asterisk}>*</span>
    </span>
    <input type="text" id={inputId} />
  </label>
</div>